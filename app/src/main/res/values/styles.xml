<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/highlight</item>
        <item name="colorSecondary">@color/highlight</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="button">@style/Button</item>
        <item name="buttonOutline">@style/ButtonOutline</item>
        <item name="materialButtonStyle">?attr/button</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>

    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ButtonSmall" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
        <item name="iconSize">16dp</item>
    </style>

</resources>
