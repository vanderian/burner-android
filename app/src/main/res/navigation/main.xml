<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/initScreen"
    >

    <fragment
        android:id="@+id/balanceScreen"
        android:name="com.vander.burner.app.ui.screen.BalanceScreen"
        android:label="BalanceScreen"
        tools:layout="@layout/screen_balance"
        >
        <action
            android:id="@+id/action_balanceScreen_to_initScreen"
            app:destination="@id/initScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/main_graph"
            app:popUpToInclusive="false"
            />
        <action
            android:id="@+id/action_balanceScreen_to_receiveScreen"
            app:destination="@id/receiveScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
        <action
            android:id="@+id/action_balanceScreen_to_sendScreen"
            app:destination="@id/sendScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
        <action
            android:id="@+id/action_balanceScreen_to_scanScreen"
            app:destination="@id/scanScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>

    <fragment
        android:id="@+id/initScreen"
        android:name="com.vander.burner.app.ui.screen.InitScreen"
        android:label="InitScreen"
        tools:layout="@layout/screen_init"
        >
        <action
            android:id="@+id/action_initScreen_to_balanceScreen"
            app:destination="@id/balanceScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/initScreen"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/receiveScreen"
        android:name="com.vander.burner.app.ui.screen.ReceiveScreen"
        android:label="ReceiveScreen"
        tools:layout="@layout/screen_receive"
        />

    <fragment
        android:id="@+id/sendScreen"
        android:name="com.vander.burner.app.ui.screen.SendScreen"
        android:label="SendScreen"
        tools:layout="@layout/screen_send"
        >
        <argument
            android:name="transferData"
            app:argType="com.vander.burner.app.ui.screen.TransferData"
            app:nullable="true"
            />
        <action
            android:id="@+id/action_sendScreen_to_scanScreen"
            app:destination="@id/scanScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/sendScreen"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/scanScreen"
        android:name="com.vander.burner.app.ui.screen.ScanScreen"
        android:label="ScanScreen"
        tools:layout="@layout/screen_scan"
        >
        <action
            android:id="@+id/action_scanScreen_to_sendScreen"
            app:destination="@id/sendScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
</navigation>